{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignore": [
            ".git",
            "node_modules",
            "dist",
            "build",
            "public",
            ".astro",
            ".next",
            "**/*.js",
            "**/*.jsx"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80,
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,

        "rules": {
            "recommended": true,
            "style": {
                "useExportType": "warn",
                "useNamingConvention": "warn",
                "useFilenamingConvention": {
                    "level": "warn",
                    "options": {
                        "filenameCases": ["export", "snake_case"],
                        "requireAscii": true,
                        "strictCase": true
                    }
                }
            }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    }
                }
            }
        }
    ]
}
